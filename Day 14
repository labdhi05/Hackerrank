class Difference:
    def __init__(self, a):
        self.__elements = a
        #self.maximumDifferrence
        

    # Add your code here
    def computeDifference(self):
        #s_elements = sorted(self.__elements)
        #self.maximumDifference = abs(s_elements[-1]-s_elements[0])
        self.maximumDifference = max(self.__elements)-min(self.__elements)
    

        
        

# End of Difference class

_ = input()
a = [int(e) for e in input().split(' ')]

d = Difference(a)
d.computeDifference()

print(d.maximumDifference)
